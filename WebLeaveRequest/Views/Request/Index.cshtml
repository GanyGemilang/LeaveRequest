<script>
    var role = document.cookie;
    var nik = sessionStorage.getItem("nik");
    console.log("role : ", role);
    console.log("nik : ", nik);
    if (role == "admin") {
        document.getElementById("request").style.display = "none";
        document.getElementById("approve-hrd").style.display = "none";
        document.getElementById("approve-manager").style.display = "none";
        document.getElementById("profile").style.display = "none";
    }
    else if (role == "hrd") {
        document.getElementById("request").style.display = "none";
        document.getElementById("manage-role").style.display = "none";
        document.getElementById("approve-manager").style.display = "none";
    }
    else if (role == "manager") {
        document.getElementById("request").style.display = "none";
        document.getElementById("manage-role").style.display = "none";
        document.getElementById("approve-hrd").style.display = "none";
    }
    else if (role == "employee") {
        document.getElementById("manage-role").style.display = "none";
        document.getElementById("approve-hrd").style.display = "none";
        document.getElementById("approve-manager").style.display = "none";
    }

    function ChangePassword() {
        console.log("test");
        var Account = new Object();
        Account.NIK = nik;
        Account.NewPassword = $("#newpassword").val();
        Account.OldPassword = $("#oldpassword").val();
        Account.ConfirmPassword = $("#confirmpassword").val();
        $.ajax({
            type: 'PUT',
            url: '/authentication/changepassword/',
            data: Account
        }).done((result) => {
            console.log(result);
            if (result == 200) {
                alert("Your Password has been Changed!");
                //$("#nikchange").val(null);
                $("#newpassword").val(null);
                $("#oldpassword").val(null);
                $("#confirmpassword").val(null);
            }
        }).fail((result) => {
            console.log(result);
            alert("Can Not Change Your Password");
        })
    }
</script>
